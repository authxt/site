---
import Layout from "@/layouts/Layout.astro";
import Blog from "@/components/features/blog/Blog.astro";
import Project from "@/components/features/projects/Project.astro";
import SeoPage from "@/components/shared/SeoPage.astro";
import Hero from "@/components/shared/Hero.astro";
import Seperator from "@/components/ui/Seperator.astro";
import Footer from "@/components/layout/Footer.astro";
---

<Layout>
  <SeoPage slot="head" />
  <main class="relative flex min-h-screen flex-col">
    <div class="flex flex-col gap-4 md:grid md:grid-cols-5 md:gap-2">
      <div class="md:col-span-2">
        <Hero />
        <br />
      </div>
      <div class="md:col-span-3 md:overflow-hidden">
        <Project />
        <br />
        <Blog />
        <br />
        <Footer />
        <br />
      </div>
    </div>
  </main>
</Layout>
